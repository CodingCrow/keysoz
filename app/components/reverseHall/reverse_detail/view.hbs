{{#component "component-reverse-detail js-comp"}}
  <div class="hide">{{json}}</div>
  <input type="hidden" name="reversePath" value="{{_ENV_HREF_.reverse}}">
  <div class="reverse-detail-container">
    <div class="reverse-title">
      <h1>{{_DATA_.noticeTitle}}</h1><br/>
      <ul>
        <li>竞价所在地：<span>{{_DATA_.districtName}}</span></li>
        <li>日期：<span>{{formatDate _DATA_.checkEndTime 'yyyy-MM-dd'}}</span></li>
      </ul>
    </div>
    <div class="reverse-info">
      <section>
        <h2>基本信息</h2>
        <table class="table table-fixed">
          <tbody>
          <tr>
            <td>反向竞价单编号</td>
            <td>{{_DATA_.id}}</td>
            <td>采购目录</td>
            <td>{{_DATA_.catalogName}}</td>
            <td>项目优先级</td>
            <td>{{#equals _DATA_.isUrgent 'Y'}}紧急{{else}}非紧急{{/equals}}</td>
          </tr>
          <tr>
            <td>报价开始时间</td>
            <td>{{formatDate _DATA_.startTime 'yyyy-MM-dd HH:mm:ss'}}</td>
            <td>报价截止时间</td>
            <td>{{formatDate _DATA_.endTime 'yyyy-MM-dd HH:mm:ss'}}</td>
            <td>供应商规模要求</td>
            <td>{{_DATA_.supScale}}</td>
          </tr>
          <tr>
            <td>供应商资格要求</td>
            <td colspan="5" title="{{_DATA_.supBasicQualif}}">符合《中华人民共和国政府采购法》第二十二条的规定，符合《关于规范政府采购供应商资格设定及资格审查的通知》第六条规定且已在本系统注册的供应商</td>
          </tr>
          <tr>
            <td>供应商区域范围要求</td>
            <td colspan="5">{{_DATA_.supDistrictName}}</td>
          </tr>
          <tr>
            <td>成交规则及确认方式</td>
            <td colspan="5">
                自动确认：由系统自动确认满足本项目的供应商资格条件和竞价要求，并且符合报价最低的供应商为最终成交供应商。
            </td>
          </tr>
          </tbody>
        </table>
      </section>
      <section>
        <h2>反向竞价商品清单</h2>
            <table class="table table-fixed">
              <thead>
              <tr>
                <th>商品类目</th>
                <th>品牌型号或服务</th>
                <th>数量</th>
                <th>起拍总价(元)</th>
              </tr>
              </thead>
              <tbody class="bgc-clear">
                {{#each _DATA_.raItemDto}}
                <tr>
                  {{#equals type 1}}
                    <td>{{productCatalogName}}</td>
                    <td>{{brand}}&nbsp;{{model}}</td>
                    <td>{{quantity}}{{unit}}</td>
                    <td>{{formatPrice controllerPrice}}</td>
                  {{else}}
                    <td>服务</td>
                    <td>{{content}}</td>
                    <td></td>
                    <td>{{formatPrice controllerPrice}}</td>
                  {{/equals}}
                </tr>
                {{/each}}
              </tbody>
            </table>
      </section>
      <section>
        <h2>收货信息</h2>
        <table class="table table-fixed">
          <tbody>
          <tr>
            <td>送货方式</td>
            <td>{{_DATA_.deliveryMethod}}</td>
            <td>送货时间</td>
            <td>{{_DATA_.deliveryTime}}</td>
            <td>送货期限</td>
            <td>合同生效后{{_DATA_.deliveryTerm}}个工作日内</td>
          </tr>
          <tr>
            <td>送货地址</td>
            <td colspan="5">
              {{#each _DATA_.raDeliveryDtos}}
                {{provinceName}}
                {{cityName}}
                {{regionName}}
                {{streetName}}
                {{details}}
                <br/>
              {{/each}}
            </td>
          </tr>
          <tr>
            <td>备注</td>
            <td colspan="5">{{_DATA_.deliveryRemark}}</td>
          </tr>
          </tbody>
        </table>
      </section>
      <section>
        <h2>商务要求</h2>
        <table class="table table-fixed">
          <tbody>
          <tr>
            <td>商务要求</td>
            <td>
              {{#each _DATA_.raBusinessDto}}
                {{add @index 1}}、{{content}}<br/>
              {{/each}}
            </td>
          </tr>
          </tbody>
        </table>
      </section>
      {{#ifCond _DATA_.entrustorderId '!=' null}}
        <section>
          <h2>采购人</h2>
          <table class="table table-fixed">
            <tbody>
            <tr>
              <td>采购单位</td>
              <td>{{_DATA_.oiOrderDTO}}</td>
              <td>联系人</td>
              <td>{{_DATA_.oiOrderDTO}}</td>
              <td>联系电话</td>
              <td>{{_DATA_.oiOrderDTO}}</td>
            </tr>
            <tr>
              <td>代理机构</td>
              <td>{{_DATA_.oiOrderDTO}}</td>
              <td>联系人</td>
              <td>{{_DATA_.oiOrderDTO}}</td>
              <td>联系电话</td>
              <td>{{_DATA_.oiOrderDTO}}</td>
            </tr>
            <tr>
              <td>监督部门</td>
              <td>{{_DATA_.oiOrderDTO}}</td>
              <td>监督电话</td>
              <td>{{_DATA_.oiOrderDTO}}</td>
              <td>传真电话</td>
              <td>{{_DATA_.oiOrderDTO}}</td>
            </tr>
            </tbody>
          </table>
        </section>
      {{/ifCond}}
      {{#of _DATA_.state "3,4"}}
        <div class="reverse-btn-container">
          <a class="btn reverse-price-btn" data-id="{{_DATA_.id}}"
             data-type="{{_DATA_.reverseType}}" href="#">我要报价</a>
        </div>
      {{/of}}
    </div>
      <div class="reverse-notice">
          <div>
              <i class="icon-zcy icon-xiangguangonggao-"></i>
              <h2>相关信息</h2>
              <span></span>
          </div>
          <div class="reverse-notice-link">
                  {{#of _DATA_.state "5,6"}}<!--竟价结果-->
                      <a class="title-detail" href="/reversehall/result?requireId={{_DATA_.id}}">{{_DATA_.noticeTitle}}</a>
                  {{/of}}
          </div>
      </div>
  </div>
{{/component}}
