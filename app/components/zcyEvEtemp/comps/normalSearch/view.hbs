{{#component 'ZCY-eevee-comp-normalSearch evees-comp js-comp'}}
  <div class="hide">{{json this}}</div>
  <div class="temp-shopid hide">{{shopId}}</div>
  <div class="input-group input-group-append input-search">
    <i class="icon-zcy icon-search"></i>
    <input type="text" name="q" class="search-input items-suggest active" value="{{q}}"
           autocomplete="off" placeholder="输入你要搜索的商品" style="width:{{#if width}}{{width}}{{else}}320px{{/if}}">
      <span class="input-group-btn">
      <button class="btn btn-primary btn-medium btn-search" id="search-button-local" type="button">
        {{#if btn1Text}}{{btn1Text}}{{else}}搜本店{{/if}}
      </button>
      <button class="btn btn-primary btn-medium btn-search" id="search-button-all" type="button" data-href="{{_HREF_.main}}">
        {{#if btn2Text}}{{btn2Text}}{{else}}搜全站{{/if}}
      </button>
    </span>
  </div>
{{/component}}

