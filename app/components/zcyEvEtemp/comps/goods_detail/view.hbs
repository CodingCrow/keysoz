{{#component "goods-detail js-comp"}}
  <input type="hidden" id="YZHD_ITEMID" value="{{itemId}}">
  <input type="hidden" id="IF_VACCINE" value="{{_DATA_.item.tags.vaccine}}">
  <input type="hidden" id="IF_supperPro" value="{{_DATA_.item.tags.blocktrade}}">
  <div class="hide">{{json this}}</div>
  <div class="spu-id" data-spu-id="{{json spuId}}"></div>
  <div class="compare-price" data-compare-price="{{json _COMPARE_PRICE_}}"></div>
  <div class="user-info" data-user-info="{{json _USER_}}"></div>
  <div class="item-detail-left" id="js-item-detail-left">
    <div class="image-manage" data-item-detail="{{_DATA_.itemDetail.id}}" data-user="{{json _USER_}}">
      <a class="main-image js-main-image-container zoom" href="{{_DATA_.item.mainImage}}">
        <img alt="{{_DATA_.item.name}}" src="{{cdnPath _DATA_.item.mainImage '400'}}" class="js-main-image"
             width="450" height="450"/>
        <i class="icon-zcy icon-search image-enlarge"></i>
      </a>
      <div class="carousel-wrap item-carousel-wrap js-comp" data-comp-path="common/more_carousel">
        <div class="carousel show">
          <ul class="images carousel-container clearfix" data-time="" data-auto="false" data-length="5"
              data-type="0" data-size="{{add (size _DATA_.imageInfos) 1}}">
            <li class="selected">
              <img id="itemMainImage" class="thumbnail" src="{{cdnPath _DATA_.item.mainImage '360'}}"
                   alt="{{_DATA_.item.name}}" data-src="{{_DATA_.item.mainImage}}"/>
            </li>
            {{#each _DATA_.imageInfos}}
              <li>
                <img class="thumbnail" src="{{cdnPath url '100'}}"
                     alt="{{#if name}}{{name}}{{else}}{{_DATA_.item.name}}{{/if}}" data-src="{{url}}"/>
              </li>
            {{/each}}
          </ul>
        </div>

        <a class="prev outside" href="javascript:void(0);"></a>
        <a class="next outside" href="javascript:void(0);"></a>
      </div>
    </div>
    <div class="other-operation">
        <!--<span>-->
            <!--<i class="icon-zcy icon-duibi"></i>-->
            <!--<a href="/search?bids={{_DATA_.item.brandId}}&specification={{_DATA_.item.specification}}"> 对比 </a>-->
        <!--</span>-->
        <span>
            <i class="icon-zcy icon-prompt"></i>
            <a href="/report/report-fill?accusationType=商品举报&businessId={{itemId}}"> 举报 </a>
        </span>
    </div>
  </div>
  <div class="item-detail-right" id="js-item-detail-right">
    <div class="item-title" data-id="{{itemId}}" data-status="{{_DATA_.item.status}}">
      <span class="title" title="{{_DATA_.item.name}}" id="js-item-name">{{_DATA_.item.name}}</span>
      {{#each _DATA_.categoryTags}}
          {{#equals this "tybgsbpzbzlm"}}
          <span class="mark">资产限额 </span>
          {{/equals}}
      {{/each}}

      <!--{{#equals _DATA_.item.tags.vaccine 1}}-->
      <!--{{else}}-->
        <!--<a href="/report/report-fill?accusationType=商品举报&businessId={{itemId}}">-->
          <!--<div class="js-report-item report-item">举报</div>-->
        <!--</a>-->
      <!--{{/equals}}-->
    </div>
    {{#equals _DATA_.item.tags.vaccine 1}}

    {{else}}
      <div class="purchase-catalog" data-gpCatalog="{{json _DATA_.gpCatalog}}">
          <div class="item-platform-link-warp">可申请采购目录：
              {{#if _DATA_.gpCatalog}}
                  <span class="catalog-list"
                        title="{{#if _DATA_.gpCatalog}}{{#each _DATA_.gpCatalog}}{{this}},&nbsp;{{/each}}{{/if}}">
                      {{#each _DATA_.gpCatalog}}
                          {{this}},&nbsp;
                      {{/each}}
                  </span>
                  <span class="show-more">
                      共<span class="total-num"></span>项，
                      <a href="javascript:void(0);" class="js-show-more">
                          展开查看
                          <i class="icon-zcy icon-xiangxiazhedie"></i>
                      </a>
                  </span>
                  <div class="show-more-box" style="display:none;">
                    <div class="title">
                        <span class="total-text">共<span class="total-num-inner"></span>个：</span>
                        <a href="javascript:void(0);" class="close-warning">×</a>
                    </div>
                    <span class="total-sold">
                        {{#each _DATA_.gpCatalog}}
                            {{this}},&nbsp;
                        {{/each}}
                    </span>
                  </div>
              {{else}}
                  暂无目录
              {{/if}}
          </div>
      </div>
    {{/equals}}


    <div class="item-info">
      <ul class="item-info-list clearfix" {{#equals _DATA_.item.tags.blocktrade 1}}style="height:50px"{{/equals}}>
        {{#equals _DATA_.item.tags.blocktrade 1}}
          <li class="supperPro_li" style="width: 100%" data-id="{{_DATA_.item.shopId}}"
              data-cid="{{_DATA_.item.categoryId}}">
            <label style="font-size: 14px;color: #666666;">下浮率：</label>
              <span class="percent" style="font-size: 20px;color: #FF7900;">0%</span>
          </li>
        {{else}}
          <li class="outer-li {{#equals _DATA_.item.tags.vaccine 1}}hide{{/equals}}">
            <label class="first-line">
              <span class="price-type">
                电商平台价
              </span>
              <span class="outer-price">
                  {{#if _DATA_.skus.[0].extraPrice.platformPrice}}
                  <div id="js-item-platform-price" class="item-platform-price" data-range="-" data-currency="{{_CURRENCY_}}">
                     ￥{{formatPrice _DATA_.skus.[0].extraPrice.platformPrice}}
                  </div>
                  {{else}}
                      <div class="none-platform-price">暂无报价</div>
                  {{/if}}
              </span>
            </label>
            {{#if _DATA_.item.extra.selfPlatformLink}}
              <a href="{{_DATA_.item.extra.selfPlatformLink}}"
                 target="_blank" title="点击跳转到自营平台">详情&nbsp;&gt;</a>
            {{/if}}
          </li>
          <li class="price-li">
                <label class="first-line">
                    <span class="price-type">
                      销&nbsp;&nbsp;&nbsp;售&nbsp;&nbsp;&nbsp;价
                    </span>
                    <span class="item-price">
                        <span class="currency-type">￥</span>
                        <span id="js-item-price" class="price"
                            {{#equals _DATA_.item.lowPrice _DATA_.item.highPrice}}
                              data-range="{{formatPrice _DATA_.item.lowPrice}}"
                            {{else}}
                              data-range="{{formatPrice _DATA_.item.lowPrice}}-{{formatPrice _DATA_.item.highPrice}}"
                            {{/equals}}>
                                {{#equals _DATA_.item.lowPrice _DATA_.item.highPrice}}
                                    <span class="sell-price">{{formatPrice _DATA_.item.lowPrice}}</span>
                                {{else}}
                                    <span class="sell-price">{{formatPrice _DATA_.item.lowPrice}}-{{formatPrice _DATA_.item.highPrice}}</span>
                                {{/equals}}
                        </span>
                    </span>
                </label>
                <span class="discount-li hide {{#equals _DATA_.item.tags.vaccine 1}}hide{{else}}{{#equals _DATA_.item.tags.mfacture 1}}hide{{/equals}}{{/equals}}">
                    <label class="first-line">
                      <span class="discount-label">优惠
                      <span class="discount-precent js-discount-precent" data-discountprecent="{{#if _DISCOUNT_}}{{formatPrice _DISCOUNT_}}{{else}}98{{/if}}"></span>
                        <span class="percent-unit"></span>
                      </span>
                    </label>
                </span>
            </li>
        {{/equals}}
        <div class="line"></div>
        <div class="sales">
          <div class="purchaseNum" data-num="{{json _PURCHASE_}}"><span class="num">{{#if _PURCHASE_.purchaserCount}}{{_PURCHASE_.purchaserCount}}{{else}}0{{/if}}</span>买家下单</div>
          <div class="salesNum" data-num="{{json _DATA_.item.saleQuantity}}"><span class="num">{{#if _DATA_.item.saleQuantity}}{{_DATA_.item.saleQuantity}}{{else}}0{{/if}}</span>累计销量</div>
        </div>
      </ul>
    </div>

    {{#equals _DATA_.item.status "1"}}
      <div class="item-skus">
        <ul id="choose" data-skus="{{json _DATA_.skus}}"
            data-attrs="{{json _DATA_.groupedSkuAttrs}}">
          <li id="choose-region">
            <div class="controls">
              {{inject "common/address_select_down"}}
            </div>
          </li>
          <div class="js-warning-box">
            <div class="title" style="display: none">
                <span>请选择您要的商品信息</span>
                <a href="javascript:void(0);" class="close-warning">×</a>
            </div>
            <div class="content">
            {{#each _DATA_.groupedSkuAttrs}}
            <li class="sku-choose js-attr-sort" data-index="{{@index}}">
              <div class="control-group">
                <label class="dt sku-items-label" for="input-name">{{attrKey}}</label>
                <div class="smdd sku-items">
                  <div class="wrap-input">
                    {{#each skuAttributes}}
                      <a class="{{#if image}}hasImage{{/if}} js-sku-attr sku-attr"
                         data-show="{{showImage}}"
                         {{#if image}}data-src="{{image}}"{{/if}} data-id="{{id}}"
                         href="javascript:void(0)" title="{{attrVal}}"
                         data-attr="{{attrKey}}:{{attrVal}}" data-key="{{attrKey}}">{{#if image}}
                        <img src="{{cdnPath image "60"}}" alt="{{attrVal}}"
                             data-src="{{image}}">{{else}}{{attrVal}}{{/if}}
                        <span class="tick-icon hide"><i class="icon-zcy icon-selected"></i></span>
                      </a>
                    {{/each}}
                  </div>
                </div>
              </div>
            </li>
            {{/each}}
            <li id="choose-amount">
            <div class="control-group">
              <label class="dt sku-items-label" for="input-name">数量</label>
              <div class="controls">
                <div class="input-amount js-item-stock-quantity" data-max="">
                  <a href="javascript:void(0);" class="disabled minus">-</a>
                  <input type="number" value="0" class="count-number" id="item-quantity" data-old="1"
                         data-max-stock="" style="width:60px">
                  <a href="javascript:void(0);" class="plus">+</a>
                </div>
                <span>{{_DATA_.item.extra.unit}}</span>
                <span class="total-stock {{#equals _DATA_.item.tags.vaccine 1}}hide{{/equals}}">
                库存<span class="item-quantity" id="js-item-stock"
                        data-stock="">{{_DATA_.item.stockQuantity}}</span>{{#if _DATA_.item.extra.unit}}{{_DATA_.item.extra.unit}}{{else}}件{{/if}}</span>
              </div>
              <div class="tooltip hide">
                  <i class="icon-zcy icon-cuowutishiicon"></i>
                  <span>此商品在当前配送地暂无库存</span>
              </div>
            </div>
          </li>
            <li id="choose-btns">
            <button class="btn btn-large btn-primary btn-icon js-add-cart add-cart" type="button" style="display: none">
              加入购物车
            </button>
            {{#unless _DATA_.item.tags.blocktrade}}
              {{#unless _DATA_.item.tags.vaccine}}
                <button class="btn btn-large js-buy-now createRequisition" type="button" data-org="{{_USER_.orgId}}" style="display: none">
                    生成需求单
                </button>
              {{/unless}}
            {{/unless}}
            <!--<button class="btn btn-large js-buy-now createPurchase" type="button" data-org="{{_USER_.orgId}}" style="display: none">-->
              <!--直接生成预购单-->
            <!--</button>-->
            <!--<button class="btn btn-large js-buy-now createOrder" type="button"-->
                    <!--data-org="{{_USER_.orgId}}" data-item-data="{{json _DATA_}}"-->
                    <!--data-seller-id="{{sellerId}}" style="display: none">-->
              <!--直接生成订单-->
            <!--</button>-->
            <button class="btn btn-large js-buy-now createNow" type="button"
                      data-org="{{_USER_.orgId}}" data-item-data="{{json _DATA_}}"
                      data-seller-id="{{sellerId}}" style="display: none">
                  立即下单
            </button>
            <!--<span class="warning-words required" style="display:none;"> 请选择商品信息 </span>-->
            <span class="stock-empty hide required"> 商品库存不足，请选择其他商品 </span>
          </li>
            </div>
          </div>
          <li class="policy-attrs" data-item-detail-mark="{{json _DATA_.itemDetailMark}}">
              <label class="title">政策属性</label>
              <span class="content">
              {{#if _DATA_.itemDetailMark}}
                  {{#equals _DATA_.itemDetailMark.isEnergySave 1}}
                  <span class="js-jieneng-box box">
                    <i class="icon-zcy icon-jieneng-icon" title="节能产品"></i>
                    <span>节能产品</span>
                  </span>
                  {{/equals}}

                  {{#equals _DATA_.itemDetailMark.isEnvironProtect 1}}
                  <span class="js-huanbao-box box">
                    <i class="icon-zcy icon-huanbao-icon" title="环保产品"></i>
                    <span>环保产品</span>
                  </span>
                  {{/equals}}

                  {{#equals _DATA_.itemDetailMark.isWaterSave 1}}
                  <span class="js-jieshui-box box">
                    <i class="icon-zcy icon-jieshui-icon" title="节水产品"></i>
                    <span>节水产品</span>
                  </span>
                  {{/equals}}

                  {{#equals _DATA_.itemDetailMark.isPZBZJZZ 1}}
                  <span class="js-PZBZJZZ-box box">
                    <img src="/lunatone/assets/images/other-images/pzb.png" alt="品字标浙江制造"/>
                    <span>品字标浙江制造</span>
                  </span>
                  {{/equals}}

                  {{#equals _DATA_.itemDetailMark.isZJMPCP 1}}
                  <span class="js-ZJMPCP-box box">
                    <img src="/lunatone/assets/images/other-images/zjmp.png" alt="浙江名牌产品"/>
                    <span>浙江名牌产品</span>
                  </span>
                  {{/equals}}

                  {{#equals _DATA_.itemDetailMark.isLZH 1}}
                  <span class="js-LZH-box box">
                    <i class="icon-zcy icon-laozihao-icon" title="老字号"></i>
                    <span>老字号</span>
                  </span>
                  {{/equals}}

                  {{#equals _DATA_.itemDetailMark.isZJCKMP 1}}
                  <span class="js-ZJCKMP-box box">
                    <img src="/lunatone/assets/images/other-images/output.png" alt="浙江出口名牌"/>
                    <span>浙江出口名牌</span>
                  </span>
                  {{/equals}}

                  {{#equals _DATA_.itemDetailMark.isSTT 1}}
                  <span class="js-STT-box box">
                    <img src="/lunatone/assets/images/other-images/stt.png" alt="首台套"/>
                    <span>首台套</span>
                  </span>
                  {{/equals}}
              {{/if}}
              <span class="none-policy" style="display: none"> 暂无 </span>
              </span>
          </li>
          <li class="service-commitment" style="display: none;">
            <label class="title">服务承诺</label>
            <span class="content">
            </span>
          </li>
          <li class="payment">
              <label class="title">支付方式</label>
                <span style="margin-left:28px;">直接支付</span>
                <span>授权支付</span>
                <span>自有资金支付</span>
            </li>
        </ul>
      </div>
    {{else}}
      <div class="item-not-on">
        <div class="status-desc">
          <p>
            {{#equals _DATA_.item.status "0"}} 亲，你来早了，此商品还未上架 {{/equals}}
            {{#equals _DATA_.item.status "-1"}} 亲，你来晚了，此商品已下架 {{/equals}}
            {{#equals _DATA_.item.status "-2"}} 亲，你来晚了，此商品已被冻结 {{/equals}}
            {{#equals _DATA_.item.status "-3"}} 亲，你来晚了，此商品已删除 {{/equals}}
          </p>
        </div>
      </div>
    {{/equals}}
  </div>

  {{#if spuId}}
      <div class="spu-compare">
        {{#inject "zcyQuote"}}
        {{/inject}}
      </div>
      {{else}}
        {{#gt (size _COMPARE_PRICE_) 0 }}
        <div class="spu-compare">
          {{#inject "zcyOldComPrice"}}
          {{/inject}}
        </div>
        {{/gt}}
  {{/if}}
{{/component}}
