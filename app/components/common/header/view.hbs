{{#component "sites-header js-comp"}}
  {{#equals _TAGS_.blocktrade 1}}
  {{else}}
    {{#equals _TAGS_.vaccine 1}}
      {{#if _USER_}}
        {{#of _USER_.currentCategory "99,12,01,03,06"}}
          {{#equals _USER_.currentCategory "01"}}
            {{#of _USER_.detailCategory "010401,010402,010403"}}
            {{else}}
              {{#assign "noPermission"}}noPermission{{/assign}}
            {{/of}}
          {{/equals}}
        {{else}}
          {{#assign "noPermission"}}noPermission{{/assign}}
        {{/of}}
      {{else}}
        {{#assign "noPermission"}}noPermission{{/assign}}
      {{/if}}
    {{/equals}}
    {{#unless noPermission}}
    <div id="env-config" data-middle="{{_ENV_HREF_.middle}}" data-user-id="{{_USER_.id}}"></div>
    <div class="search-tab">
      <a class="product-tab {{#equals isSupplier 1}}{{else}}active{{/equals}}" href="javascript:void(0)">商品</a>
      <a class="supplier-tab {{#equals isSupplier 1}}active{{/equals}}" {{#equals ifshowSupplier "false"}}style="display: none" {{/equals}} href="javascript:void(0)">供应商</a>
    </div>
    <form class="form form-search" type="get" id="form-search" action="{{#if action}}{{action}}{{else}}{{_HREF_.main}}/search{{/if}}" data-hrefbase="{{_HREF_.main}}" style="width:{{width}}px;">
      {{#equals position "up"}}
        {{#if hotwords}}
          <div class="search-hot">
            <ul class="search-hot-ul">
              <li><span>{{i18n "Popular searches " bundle="all_mix"}}:</span></li>
              {{#each hotwords}}
                <li><a href="{{_HREF_.main}}/search?q={{urlEncode this "utf-8"}}" target="_blank">{{this}}</a></li>
              {{/each}}
            </ul>
          </div>
        {{else}}
          <div class="search-hot">
            <ul class="search-hot-ul js-hotword">
            </ul>
          </div>
        {{/if}}
      {{/equals}}
      <fieldset>
        <div class="input-group input-group-append input-search">
          <input type="hidden" class="isSupplier" name="isSupplier" value="{{#equals isSupplier 1}}1{{else}}0{{/equals}}" />
          {{#unless itemId}}
            {{#if shopId}}<input type="hidden" name="shopId" value="{{shopId}}">{{/if}}
          {{/unless}}
          {{#if fcid}}
            <input type="hidden" name="fcid" value="{{fcid}}">
            {{#equals type "vaccine"}}
              <input type="hidden" name="normal" value="2">
              <input type="hidden" name="type" value="vaccine">
            {{else}}
              {{#equals normal 1}}
                <input type="hidden" name="normal" value="1">
              {{/equals}}
              <input type="hidden" name="type" value="hall">
            {{/equals}}
          {{/if}}
          <i class="icon-zcy icon-search"></i>
          <input type="text" name="q" class="search-input items-suggest active" value="{{q}}" autocomplete="off" placeholder="{{#equals isSupplier 1}}输入您要搜索的供应商{{else}}输入您要搜索的商品{{/equals}}"><span class="input-group-btn">
          <button class="btn btn-primary btn-medium" id="search-button" type="submit">{{#if searchBtn}}{{{searchBtn}}}{{else}}搜&nbsp;索{{/if}}</button>
        </span>
        </div>
      </fieldset>
      {{#ifCond position "!=" "up"}}
        {{#if hotwords}}
          <div class="search-hot">
            <ul class="search-hot-ul">
              <li><span class="title">{{i18n "Popular searches " bundle="all_mix"}}:</span></li>
              {{#each hotwords}}
                <li><a href="{{_HREF_.main}}/eevees/search?q={{urlEncode this "utf-8"}}" target="_blank">{{this}}</a></li>
              {{/each}}
            </ul>
          </div>
        {{else}}
          <div class="search-hot">
            <ul class="search-hot-ul js-hotword">
            </ul>
          </div>
        {{/if}}
      {{/ifCond}}
    </form>
    {{/unless}}
  {{/equals}}
{{/component}}
