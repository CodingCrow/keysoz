{{#component "order-form-detail trade-manage js-comp clearfix"}}
  <div class="float-hidden" hidden></div>
  <span class="hide">{{json}}</span>
  <div class="t-breadcrumb">
    {{#equals _USER_.type 1}}
      {{#equals _DATA_.order.type 3}}
        <label>大宗采购管理</label>
        <label> / </label>
        <a href="/buyer/blocktrade-orders">订单列表</a>
      {{/equals}}
      {{#equals _DATA_.order.type 2}}
        <label>疫苗采购管理</label>
        <label> / </label>
        <a href="/buyer/vaccine-orders">订单列表</a>
      {{/equals}}
      {{#of _DATA_.order.type '2,3'}}
      {{else}}
        <label>网超采购管理</label>
        <label> / </label>
        <a href="/buyer/netsuper-orders">订单列表</a>
      {{/of}}
    {{else}}
      {{#equals _DATA_.order.type 3}}
        <label>大宗订单管理</label>
        <label> / </label>
        <a href="/seller/blocktrade-orders">订单列表</a>
      {{/equals}}
      {{#equals _DATA_.order.type 2}}
        <label>疫苗订单管理</label>
        <label> / </label>
        <a href="/seller/vaccine-orders">订单列表</a>
      {{/equals}}
      {{#of _DATA_.order.type '2,3'}}
      {{else}}
        <label>订单管理</label>
        <label> / </label>
        <a href="/seller/netsuper-orders">订单列表</a>
      {{/of}}
    {{/equals}}
    <label> / </label>
    <label class="active">订单详情</label>
  </div>
  <div class="order-form-detail-foot pull-right">
    <fieldset>
      {{#equals _USER_.type 1}}
        {{#equals _DATA_.order.status 4}}
          {{#equals _DATA_.order.purchaserOrganizationId _USER_.orgId}}
            {{!增加疫苗验收岗位}}
            {{#equals _DATA_.order.orderType 2}}
              {{#of "21" _ROLES_}}
                <button class="btn btn-primary btn-small order-check" type="button" data-event="confirm:order-check"
                        data-toggle="confirm" data-title="确认验收吗？" data-content="是否确认验收？" data-id="{{_DATA_.order.id}}">
                  {{#equals _DATA_.order.hasRecord false}}验收{{/equals}}
                </button>
              {{/of}}
            {{else}}
              {{#equals _USER_.id _DATA_.order.purchaserId}}
                <button class="btn btn-primary btn-small order-check" type="button" data-event="confirm:order-check"
                        data-toggle="confirm" data-title="确认验收吗？" data-content="是否确认验收？" data-id="{{_DATA_.order.id}}">
                  {{#equals _DATA_.order.hasRecord false}}验收{{/equals}}
                </button>
              {{/equals}}
            {{/equals}}
          {{/equals}}
        {{/equals}}
      {{/equals}}

      {{#equals _USER_.type 2}}
        {{#with _DATA_.order}}
          {{#equals status 0}}
            <a href="javascript:void(0)" data-event="confirm:receive-order"
                                   data-toggle="confirm"
                                   data-title="确认接单吗？"
                                   data-content="接单后不可取消，请尽快安排发货！" data-id="{{id}}" class="btn btn-primary btn-small">接单</a>&nbsp;&nbsp;
          {{#equals _DATA_.order.orderType 2}}
            <!--疫苗订单不能拒单 -->
          {{else}}
            <a href="javascript:void(0)" class="js-reject-order btn btn-info btn-small" data-id="{{id}}">拒绝接单</a>
          {{/equals}}
          {{else}}
            {{#of status "0,1,2"}}
              {{#equals hasRecord false}}
                {{#equals isNeedReissue false}}
                  <a href="/buyer/order-shipment-create?orderId={{orderId}}&orderType={{_DATA_.order.orderType}}" class="btn btn-primary btn-small js-create-shipment">发货</a>
                {{/equals}}
              {{/equals}}
            {{/of}}
          {{/equals}}
          {{#equals status 3}}
            {{#equals hasRecord false}}
              {{#equals isNeedReissue true}}
                {{#equals ../_DATA_.hasReceiveCommonAll true}}
                  <a href="javascript:void(0)" class="btn btn-primary btn-small js-create-reissue-shipment">补发货</a>
                {{/equals}}
              {{/equals}}
            {{/equals}}
          {{/equals}}
          {{#equals status -4}}
            <a href="javascript:void(0)" class="btn btn-primary btn-small" name="confirm-cancel-order" data-id="{{id}}">处理申请</a>
          {{/equals}}
        {{/with}}
      {{/equals}}
      {{#equals _USER_.type 1}}
        {{#equals _DATA_.order.hasReturn false}}
          {{#of _DATA_.order.status '4,5'}}
            {{#equals _DATA_.order.orderType 2}}
              <!-- 疫苗订单不允许退换货 -->
            {{else}}
              &nbsp;&nbsp;<a href="/buyer/back-change/purchaser-form?orderId={{orderId}}" class="btn btn-secondary btn-small order-name">退换货</a>
            {{/equals}}
          {{/of}}
        {{/equals}}
      {{/equals}}
      {{#equals _DATA_.order.purchaserOrganizationId _USER_.orgId}}
        {{#equals _DATA_.order.orderType 2}}
          <!-- 疫苗订单不允许申诉 -->
        {{else}}
          &nbsp;&nbsp;<a href="{{_ENV_HREF_.middle}}/appeal/appeal-create?docId={{orderId}}&service=com.dtdream.vanyar.credit.web.utils.OrderAppealBusinessService&docUrl=/buyer/orders/detail?orderId={{orderId}}"
          class="btn btn-secondary btn-small order-name">申诉</a>
        {{/equals}}
      {{/equals}}
      {{#equals _DATA_.order.orderType 2}}
        <a href="/buyer/order-print?orderId={{orderId}}&todo=1" target="_blank" class="btn btn-secondary btn-small">打印订单</a>
      {{/equals}}
    </fieldset>
  </div>
  <div class="order-form-detail-body" data-orderid={{_DATA_.order.id}} data-order-id="{{orderId}}" data-order-type="{{_DATA_.order.orderType}}">
    <div class="trade-panel">
      <div class="trade-panel-top">
        <div class="trade-panel-title">订单概览</div>
      </div>
      <div class="trade-panel-body">
      {{#with _DATA_.order}}
        <div class="order-form-detail-about" style="width:75%; display:inline-block;">
        <span id="_orderStatus" style="display:none;">{{status}}</span>
          <table class="table table-striped">
            <tbody>
              <tr class="no-border">
                <td class="no-border right-text"  width="11%"><label class="desc-text">订单号：</label></td>
                <td class="no-border" width="20%">{{id}}</td>

                {{#equals sourceType 0}}
                  <!--直接生成订单 -->
                {{/equals}}
                {{#equals sourceType 1}}
                  <!--需求单生成订单 -->
                  <td class="no-border right-text" width="11%"><label class="desc-text">需求单号：</label></td>
                  <td class="no-border" width="20%">
                    {{#equals _USER_.id purchaserId}}
                      <div class="requisition-id-links" style="max-width: 240px;" data-ids="{{sourceIds}}"></div>
                    {{else}}
                      <span style="max-width: 240px; word-break: break-all;">{{sourceIds}}</span>
                    {{/equals}}
                  </td>
                {{/equals}}
                {{#equals sourceType 2}}
                  <!--采购单生成订单 -->
                  <td class="no-border right-text" width="11%"><label class="desc-text">预购单号：</label></td>
                  {{#equals _DATA_.order.orderType 1}}
                    <!-- 合同订单时，这个单号有问题 -->
                    <td></td>
                  {{else}}
                    <td class="no-border" width="20%">{{#equals _USER_.id purchaserId}}<a
                      href="/buyer/purchases/detail?purchaseId={{purchaserOrderId}}&businessId={{purchaserOrderId}}&tableCode=zcy_purchase_orders">{{purchaserOrderId}}</a>{{else}}{{purchaserOrderId}}{{/equals}}
                    </td>
                  {{/equals}}
                {{/equals}}
                <td class="no-border right-text"  width="11%"><label class="desc-text">创建时间：</label></td>
                <td class="no-border left-text" width="20%">{{formatDate createdAt}}</td>
              </tr>
              <tr class="no-border">
                <td class="no-border right-text"  width="11%"><label class="desc-text">采购单位：</label></td>
                <td class="no-border left-text" width="20%">{{purchaserOrganizationName}}</td>
                <td class="no-border right-text"  width="11%"><label class="desc-text">提交人：</label></td>
                <td class="no-border left-text" width="20%">{{purchaserName}}</td>
                <td class="no-border right-text"  width="11%"><label class="desc-text">联系电话：</label></td>
                <td class="no-border left-text" width="20%">{{purchaserMobile}}</td>
              </tr>
              <tr class="no-border">
                <td class="no-border right-text"  width="11%"><label class="desc-text">供应商：</label></td>
                <td class="no-border left-text" width="20%">{{supplierOrganizationName}}</td>
                <td class="no-border right-text"  width="11%"><label class="desc-text">联系人：</label></td>
                <td class="no-border left-text" width="20%">{{supplierUserName}}</td>
                <td class="no-border right-text"  width="11%"><label class="desc-text">联系电话：</label></td>
                <td class="no-border left-text" width="20%">{{supplierUserMobile}}</td>
              </tr>
              <tr class="no-border">
                <td class="no-border right-text"  width="11%"><label class="desc-text">验收单：</label></td>
                <td class="no-border left-text" width="20%">
                {{#if ../_DATA_.acceptanceFiles.empty true}}<span class="no-href">验收单</span>{{else}}<a class="js-show-acceptance-file" data-files="{{json ../_DATA_.acceptanceFiles}}">验收单</a>{{/if}}
                </td>
                <td class="no-border right-text"  width="11%"><label class="desc-text">验收时间：</label></td>
                <td class="no-border left-text" width="20%">{{formatDate acceptedAt}}</td>
                <td class="no-border right-text"  width="11%"><label class="desc-text">结算单号：</label></td>
                <td class="no-border left-text" width="20%">
                {{#equals _USER_.id purchaserId}}
                  <a href="{{_ENV_HREF_.settlement}}/settlement/purchaser-manage/detail?finalStatementId={{finalStatementId}}">{{finalStatementNo}}</a>
                {{else}}
                  <a href="{{_ENV_HREF_.settlement}}/settlement/supplier-manage/detail?finalStatementId={{finalStatementId}}">{{finalStatementNo}}</a>
                {{/equals}}
                </td>
              </tr>
              <tr class="no-border" title="{{comment}}">
                  <td class="no-border right-text" width="11%"><label class="desc-text">备注：</label></td>
                  <td class="no-border" colspan="5" style="text-align: left" width="88%"><div style="display:inline-block;width: 700px;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;">{{#if comment}}{{comment}}{{else}}--{{/if}}</div></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="order-form-detail-about detailStatus pull-right">
          <table class="table">
            <tbody>
            <tr class="no-border"><td class="no-border"></td></tr>
            <tr class="no-border">
              <td class="no-border left-text" style="color:#bbb;">订单状态：</td>
            </tr>
            <tr class="no-border">
              <td style="font-size:16px;color:#F79000;" class="no-border left-text">
                {{#equals status -5}}订单取消{{/equals}}
                {{#equals status -4}}订单待取消{{/equals}}
                {{#equals status -2}}供应商拒单{{/equals}}
                {{#equals status 0}}待供应商接单{{/equals}}
                {{#equals status 1}}待发货{{/equals}}
                {{#equals status 2}}部分发货{{/equals}}
                {{#equals status 3}}
                  {{#equals isNeedReissue false}}全部发货{{else}}全部发货(待补发货){{/equals}}
                {{/equals}}
                {{#equals status 4}}待验收{{/equals}}
                {{#equals status 5}}已验收,交易完成{{/equals}}
                {{#equals status 6}}启动结算{{/equals}}
                {{#equals status 7}}已完成{{/equals}}
                {{#equals status 10}}退换货中{{/equals}}
                {{#equals status -6}}全部退货{{/equals}}
              </td>
            </tr>
            <tr class="no-border"><td class="no-border"></td></tr>
            </tbody>
          </table>
        </div>
      {{/with}}
      </div>
    </div>
    {{!-- xinzeng  --}}
    <div class="trade-panel" id="Anchor">
      <div class="trade-panel-top">
        <div class="trade-panel-title">
        <span>商品信息</span>
        {{#equals _USER_.type 1}}
          {{#equals _DATA_.order.orderType 2}}
            <!--疫苗订单没有需求单-->
          {{else}}
            <div class="pull-right list-switch">
              <label>查看方式：</label>
              <span class="listBtnNormal list-active goodsList">商品列表</span>
            {{#gt (size _DATA_.requisitionWithItems) 0}}
              <span class="listBtnNormal requireList">需求单列表</span>
            {{/gt}}
            </div>
          {{/equals}}
        {{/equals}}
        </div>
      </div>
      <div class="trade-panel-body">
        <div class="goodsListContent">
          <div class="trade-panel">
            <div class="trade-panel-top">
              <div class="trade-panel-title">
                <table style="border: none;">
                  <thead>
                  <td class="tabletop" style="width:38%;">商品</td>
                  <td class="tabletop" style="width:10%;">单价(元)</td>
                  <td class="tabletop" style="width:10%;">数量</td>
                  {{#equals _DATA_.order.orderType '2'}}
                    <td class="tabletop" style="width:10%;">已收货数量</td>
                    <td class="tabletop" style="width:20%;">商品批号</td>
                  {{else}}
                    <td class="tabletop" style="width:30%;">已收货数量</td>
                  {{/equals}}
                  <td class="tabletop" style="width:10%;text-align:center;">状态</td>
                  </thead>
                </table>
              </div>
            </div>
          </div>
          <div style="margin-bottom:10px;">
            {{#each _DATA_.shipmentWithItems}}
            <table class="table table-striped" style="margin-bottom: 10px;">
              <thead>
                <tr>
                  <th colspan="{{#equals _DATA_.order.orderType '2'}}6{{else}}5{{/equals}}" class="left-text">
                    <span style="margin-right:20px;">发货单号：{{orderShipment.id}}</span>
                    {{#equals orderShipment.shipmentType 2}}
                      <span style="margin-right:10px;">送货上门 </span>
                      <span>送货时间:{{formatDate orderShipment.createdAt}}</span>
                      <span style="margin-left:20px;">地址：</span>
                      <span>{{orderShipment.province}}{{orderShipment.city}}{{orderShipment.region}}{{orderShipment.street}}{{orderShipment.detail}}({{orderShipment.receiver}} 收) {{#if orderShipment.mobile}}{{orderShipment.mobile}}{{else}}{{#if orderShipment.areaCode}}{{orderShipment.areaCode}}-{{/if}}{{orderShipment.phone}}{{#if orderShipment.phoneExt}}&nbsp;&nbsp;{{orderShipment.phoneExt}}{{/if}}{{/if}}</span>
                    {{else}}
                      <span style="margin-right:10px;">{{orderShipment.expressName}}</span>
                      <span data-expresscode="{{orderShipment.expressCode}}" data-shipmentno="{{orderShipment.shipmentNo}}">运单号：{{orderShipment.shipmentNo}}</span>
                      <span class="more">更多 <i class="icon-zcy icon-xiangxiazhedie toggle-tool" style="font-size:12px;"></i></span>
                      <span style="margin-left:20px;">地址：</span>
                      <span>{{orderShipment.province}}{{orderShipment.city}}{{orderShipment.region}}{{orderShipment.street}}{{orderShipment.detail}}({{orderShipment.receiver}} 收) {{#if orderShipment.mobile}}{{orderShipment.mobile}}{{else}}{{#if orderShipment.areaCode}}{{orderShipment.areaCode}}-{{/if}}{{orderShipment.phone}}{{#if orderShipment.phoneExt}}&nbsp;&nbsp;{{orderShipment.phoneExt}}{{/if}}{{/if}}</span>
                    {{/equals}}
                  </th>
                </tr>
              </thead>
              <tbody>
              {{#each shipmentItemExts}}
                <tr data-shipment-id="{{../orderShipment.id}}">
                  <td width="38%" class="left-text">
                    <span>
                      <a href="/items/{{itemId}}">{{itemName}}</a>&nbsp;&nbsp;&nbsp;&nbsp;
                      <span class="sku-attrs">{{#each attributeMap}}{{this}}&nbsp;&nbsp;{{/each}}</span>
                      <span class="js-item-services" data-services="{{json services}}"></span>
                    </span>
                  </td>
                  <td width="10%" style="color:#F79000;">{{formatPrice skuPrice}}</td>
                  <td width="10%">{{#equals quantity -1}}不限{{else}}{{quantity}}{{/equals}}</td>
                  <td width="{{#equals _DATA_.order.orderType '2'}}10%{{else}}30%{{/equals}}" style="text-align: left;">
                    {{receiveQuantity}}
                    {{#if backQuantity}}退货：{{backQuantity}}{{/if}}
                    {{#if swapQuantity}}换货：{{swapQuantity}}{{/if}}
                  </td>
                  <!--疫苗订单显示商品批号信息 -->
                  {{#equals _DATA_.order.orderType '2'}}
                    <td width="20%">
                      {{#each vaccineItemExts}}
                        <div class="batchNumber">
                          <span>{{batchNum}}</span>
                          <span>(数量：{{quantity}})</span>
                          <span>&nbsp;&nbsp;有效期：{{effectiveDateStart}}~{{effectiveDateEnd}}</span><br>
                          <span class="js-ossFile" data-file="{{json ossFileIds.[0]}}"></span>
                          <span class="js-ossFile" data-file="{{json ossFileIds.[1]}}"></span>
                          <span class="js-ossFile" data-file="{{json ossFileIds.[2]}}"></span>
                        </div>
                      {{/each}}
                    </td>
                  {{/equals}}
                  {{#equals @index 0}}
                    <td width="10%" rowspan="{{../itemLength}}" style="border:1px solid #CCD0D6;text-align: center;">
                      {{#equals ../orderShipment.status 0}}
                        {{#equals ../../_USER_.id _DATA_.order.purchaserId}}
                          <a href="javascript:void(0)" class="js-confirm-receiving">确认收货</a>
                        {{else}}
                          <div>待确认收货</div>
                        {{/equals}}
                      {{/equals}}
                      {{#equals ../orderShipment.status 1}}
                        <div>部分收货</div>
                      {{/equals}}
                      {{#equals ../orderShipment.status 2}}
                        <div>全部收货</div>
                      {{/equals}}
                    </td>
                  {{/equals}}
                </tr>
              {{/each}}
              </tbody>
            </table>
            {{/each}}
          </div>
        </div>
        {{#gt (size _DATA_.requisitionWithItems) 0}}
          <div class="requireListContent" style="display:none;">
            <table class="table">
              <thead>
              <tr>
                <th>需求单号</th>
                <th>需求人</th>
                <th>商品</th>
                <th>单价(元)</th>
                <th>数量</th>
              </tr>
              </thead>
              <tbody>
              {{#each _DATA_.requisitionWithItems}}
                <tr>
                  {{#if reqId}}
                    <td>{{reqId}}</td>
                  {{else}}
                    <td> -- </td>
                  {{/if}}
                  <td>{{reqName}}</td>
                  <td>
                    <a href="/items/{{itemId}}">{{itemName}}</a>
                    <span class="js-item-services" data-services="{{json services}}"></span>
                  </td>
                  <td style="color:#F79000;">{{formatPrice itemPrice}}</td>
                  <td>{{#equals itemQuantity -1}}不限{{else}}{{itemQuantity}}{{/equals}}</td>
                </tr>
              {{/each}}
              </tbody>
            </table>
          </div>
        {{/gt}}
      </div>
    </div>
    {{!-- xinzeng --}}
      {{#ifCond _DATA_.order.orderType '!=' 1}}
          {{#gt (size _DATA_.invoiceWithCounts) 0}}
        <div class="order-invoices">
          <div class="trade-panel">
            <div class="trade-panel-top">
              <div class="trade-panel-title">发票信息</div>
            </div>
            <div class="trade-panel-body">
              <table class="table table-striped">
                <thead>
                <tr>
                  <!--<th width="40%">发票寄送地址</th>-->
                  <th width="10%">货票同行</th>
                  <th width="15%">发票类型</th>
                  <th width="20%">发票抬头信息</th>
                  <th width="15">开户行</th>
                  <th width="15">开户行账号</th>
                  <th width="15">纳税人识别号<i class="icon-zcy icon-warningfill js-invoice-popover"></i></th>
                  <th width="10%" class="td-operation">操作</th>
                </tr>
                </thead>
                <tbody>
                {{#each _DATA_.invoiceWithCounts}}
                  {{#with invoice}}
                    <tr class="item-tr" data-id="{{id}}" data-orderid="{{orderId}}" data-invoiceid="{{invoiceId}}">
                      {{!--
                      <td>
                      <label data-provinceid="{{provinceId}}">{{province}}</label><label data-cityid="{{cityId}}">{{city}}</label><label data-regionid="{{regionId}}">{{region}}</label><label data-streetid="{{streetId}}">{{stree}}</label>{{detail}}&nbsp;&nbsp;&nbsp;&nbsp;{{receiver}}&nbsp;&nbsp;&nbsp;&nbsp;{{#if mobile}}{{mobile}}{{else}}{{#if areaCode}}{{areaCode}}-{{/if}}{{phone}}{{#if phoneExt}}&nbsp;&nbsp;{{phoneExt}}{{/if}}{{/if}}
                      </td>
                      --}}
                      <td>
                        {{#equals invoiceBillingMode 1}}
                          否
                        {{else}}
                          是
                        {{/equals}}
                      </td>
                      <td>
                        {{#equals invoiceType 0}}普通发票{{/equals}}
                        {{#equals invoiceType 1}}增值税普通发票{{/equals}}
                        {{#equals invoiceType 2}}增值税专用发票{{/equals}}
                      </td>
                      <td data-invoiceid="{{invoiceId}}">{{invoiceTitle}}</td>
                      <td>{{#if depositeBank}}{{depositeBank}}{{else}}－{{/if}}</td>
                      <td>{{#if bankAccount}}{{bankAccount}}{{else}}－{{/if}}</td>
                      <td>{{#if taxId}}{{taxId}}{{else}}－{{/if}}</td>
                      <td class="td-operation"><a class="js-show-inv-item-list">查看商品({{../invoiceTypeCount}})</a></td>
                    </tr>
                  {{/with}}
                {{else}}
                  <tr>
                    <td colspan="4" class="center-text">无可展示信息</td>
                  </tr>
                {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      {{/gt}}
      <div class="order-payments">
        <div class="trade-panel">
          <div class="trade-panel-top">
            <div class="trade-panel-title">预算信息
              {{!--
              {{#equals _USER_.type 1}}
                {{#equals _DATA_.order.hasRecord true}}
                {{else}}
                {{#ifCond _DATA_.order.status "!=" 10}}
                {{#ifCond _DATA_.order.status "!=" -5}}
                {{#equals _DATA_.order.purchaserOrganizationId _USER_.orgId}}
                  <span class="change-confirm-book js-change-confirm">
                    <a class="js-change-confrim-modal">替换确认书</a>
                  </span>
                {{/equals}}
                {{/ifCond}}
                {{/ifCond}}
                {{/equals}}
              {{/equals}}
              --}}
            </div>
          </div>
            <div class="trade-panel-body">
                {{#inject "buyer/order_form_detail/order_plan_manage"
                    items=_DATA_.itemWithPayInfos
                    orderId=orderId
                    confirmationFee=_DATA_.planAmount
                    otherFee=_DATA_.unplanAmount
                    actuallyFee=_DATA_.order.fee}}
                {{/inject}}
            </div>
        </div>
      </div>
    {{/ifCond}}

    {{!-- 网超合同信息 --}}
    {{#if _DATA_.order.needContract}}
          <div class="contract-info" data-contractInfo="{{json _DATA_.cmMainDto}}">
              <div class="title">
                  <p class="order-title">网超合同</p>
              </div>
              <table class="table contract-info-table js-contract-info-table">
                  <thead>
                  <tr>
                      <th width="150">合同编号</th>
                      <th width="200">合同名称</th>
                      <th width="200">采购单位</th>
                      <th width="80">成交金额（元）</th>
                      <th width="80">状态</th>
                      <th width="80">操作</th>
                  </tr>
                  </thead>
                  <tbody>
                  {{#if _DATA_.cmMainDto}}
                    {{#with _DATA_.cmMainDto}}
                          <tr class="item-tr contract-info-tr">
                              <td>{{contractCode}}</td>
                              <td>{{contractName}}</td>
                              <td>{{purchaser}}</td>
                              <td style="color:red">{{contactTotalPrice}}</td>
                              {{!-- 供应商 --}}
                              {{#equals _USER_.type 2}}
                                  {{#equals contractStateStr "待起草"}}
                                      <td>待起草</td>
                                      <td><a href="{{_ENV_HREF_.vienna}}/contract/manage/detail?id={{id}}" target="_blank">起草</a></td>
                                  {{/equals}}
                                  {{#equals contractStateStr "采购人待确认"}}
                                      <td>采购人待确认</td>
                                      <td><a href="{{_ENV_HREF_.vienna}}/contract/manage/view?id={{id}}" target="_blank">查看</a></td>
                                  {{/equals}}
                                  {{#equals contractStateStr "已完成"}}
                                      <td>已完成</td>
                                      <td>
                                          <a href="{{_ENV_HREF_.vienna}}/contract/manage/view?id={{id}}" target="_blank">查看</a>
                                      </td>
                                  {{/equals}}
                              {{/equals}}
                              {{!-- 采购方 --}}
                              {{#equals _USER_.type 1}}
                                  {{#equals contractStateStr "待起草"}}
                                      <td>待起草</td>
                                      <td><a href="{{_ENV_HREF_.vienna}}/contract/manage/view?id={{id}}" target="_blank">查看</a></td>
                                  {{/equals}}
                                  {{#equals contractStateStr "采购人待确认"}}
                                      <td>采购人待确认</td>
                                      <td><a href="{{_ENV_HREF_.vienna}}/contract/manage/checkContract?id={{id}}&type=2" target="_blank">确认合同</a></td>  {{!-- 合同管理那边 type=2 是采购单位 --}}
                                  {{/equals}}
                                  {{#equals contractStateStr "已完成"}}
                                      <td>已完成</td>
                                      <td>
                                          <a href="{{_ENV_HREF_.vienna}}/contract/manage/view?id={{id}}" target="_blank">查看</a>
                                      </td>
                                  {{/equals}}
                              {{/equals}}
                          </tr>
                    {{/with}}

                    {{else}}
                      {{!-- 采购方 --}}
                      {{#equals _USER_.type 1}}
                          <tr class="item-tr contract-info-tr">
                              <td colspan="6" style="text-align: center;">
                                  <i class="icon-zcy icon-cuowutishiicon" style="font-size:14px;"></i>
                                    {{!-- 待供应商接单 --}}
                                    {{#equals _DATA_.order.status 0}}
                                        <span>待供应商接单后，合同会自动生成</span>
                                    {{/equals}}
                                    {{!-- 供应商已接单，但合同生成失败 --}}
                                    {{#gt _DATA_.order.status 0}}
                                        <span>抱歉，此笔订单网超合同生成失败，待供应商重新生成</span>
                                    {{/gt}}
                              </td>
                          </tr>
                      {{/equals}}
                      {{!-- 供应商 --}}
                      {{#equals _USER_.type 2}}
                          <tr class="item-tr contract-info-tr">
                              <td colspan="6" style="text-align: center;">
                                  <i class="icon-zcy icon-cuowutishiicon" style="font-size:14px;"></i>
                                  {{!-- 待接单 --}}
                                  {{#equals _DATA_.order.status 0}}
                                      <span>待接单后，合同会自动生成</span>
                                  {{/equals}}
                                  {{!-- 已接单，但合同生成失败 --}}
                                  {{#gt _DATA_.order.status 0}}
                                      <span>抱歉，此笔订单网超合同生成失效，请<a href="javascript:void(0);" class="js-reGenerateContract">重新生成</a></span>
                                  {{/gt}}
                              </td>
                          </tr>
                      {{/equals}}
                  {{/if}}
                  </tbody>
              </table>
          </div>
    {{/if}}

    {{!-- 退货信息 --}}
    {{#equals _DATA_.order.hasReturn  true }}
