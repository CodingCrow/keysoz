        <div class="trade-panel">
          <div class="trade-panel-top">
            <div class="trade-panel-title">流转日志
            </div>
          </div>
          <div class="trade-panel-body">
          {{#inject "common/flow_log"}}
            {
              "bizType": 10001,
              "targetId": "{{orderId}}"
            }
          {{/inject}}
          </div>
        </div>
      </div>
  </div>

