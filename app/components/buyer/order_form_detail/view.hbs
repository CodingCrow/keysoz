                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    {{else}}
      {{#equals _DATA_.order.status  10}}
        <div class="order-payments">
          <div class="trade-panel">
            <div class="trade-panel-top">
              <div class="trade-panel-title">
              退货信息
              </div>
            </div>
            <div class="trade-panel-body">
              <table class="table table-striped" style="margin-top:10px;">
                <thead>
                  <tr>
                    <th width="20%"> 退换货单号</th>
                    <th width="20%">原因</th>
                    <th width="20%">退换货方式</th>
                    <th width="20%">状态</th>
                    <th width="20%" class="td-operation">操作</th>
                  </tr>
                </thead>
                <tbody>
                {{#each _RETURN_}}
                  <tr>
                    <td>{{id}}</td>
                    <td>{{returnReason}}</td>

                    <td>
                      {{#equals returnType 1}}物流{{/equals}}
                      {{#equals returnType 2}}上门取件{{/equals}}
                    </td>
                    <td>
                      {{#equals status  1}}待供应商确认{{/equals}}
                      {{#equals status -1}}供应商拒绝{{/equals}}
                      {{#equals status -2}}采购人撤销{{/equals}}
                      {{#equals status  2}}待采购人退换货{{/equals}}
                      {{#equals status  3}}待供应收货{{/equals}}
                      {{#equals status  4}}换货{{/equals}}
                      {{#equals status  5}}供应商部分发货{{/equals}}
                      {{#equals status  6}}供应商全部发货{{/equals}}
                      {{#equals status  9}}待供应商上门取货{{/equals}}
                      {{#equals status 10}}退换货结束{{/equals}}
                    </td>
                    <td><a  href='/buyer/back-change/purchaser-info?returnOrderId={{id}}' class="lookdetail">查看详情</a></td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      {{/equals}}
    {{/equals}}

