<div class="modal">
  <div class="modal-header" style="width:550px;">
    <h2>取消订单</h2>
  </div>
  <form class="form" id="js-cancel-order-form">
    <div class="modal-body">
      <div>
        <div>
          <label for="js-cancel-reason" style="margin-bottom: 20px"><b class="required">*</b>取消理由：</label>
          <input type="hidden" name="orderId" value="{{orderId}}">
        </div>
        <div>
          <textarea id="js-cancel-reason" name="comment" placeholder="请输入取消理由" style="width:500px; height:150px" required></textarea>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn btn-primary btn-medium" type="submit">确定</button>
      &nbsp;
      <button class="btn btn-info btn-medium close" type="button">取消</button>
    </div>
  </form>
</div>
