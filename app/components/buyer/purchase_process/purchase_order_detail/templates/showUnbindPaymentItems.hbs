<div class="modal pur-modal">
  <div class="modal-header">
    <h2>关联确认书的商品</h2>
  </div>
  <div class="payment-items-lists" data-req-lists-total="{{_DATA_.total}}" data-paymentid="{{_DATA_.itemId}}">
    <div class="unbind-payment-items">
      <div class="modal-body clearfix">
        <div class="quota-content" style="display: none;"><span class="quota-title">采购目录:<span class="quota-name"></span>的限额标准为<span class="quota-number"></span></span></div>
        <div><strong><span class="req-title">商品清单</span></strong></div>
        {{!-- {{json _DATA_}} --}}
        <table class="table  center-tex unbind-payment-item-table">
          <thead>
            <tr>
              <th width="24"></th>
              <th class="left-text" width="350"> <span class="">商品</span> </th>
              <th width="100">商品编号</th>
              <th width="100">供应商</th>
              <th width="110">单价(元)</th>
              <th width="120">关联确认书数量</th>
            </tr>
          </thead>
          <tbody>
            {{#each _DATA_.data}}
              <tr class="item-tr" data-site="{{shopId}}" data-id="{{skuId}}" data-itemid={{itemId}}>
                <td width="24" class="check"><input type="checkbox" class="js-select-item input-checkbox quota-check"></td>
                <td class="left-text"><span><span>{{itemName}}</span>&nbsp;&nbsp;&nbsp;&nbsp;<span class="sku-attrs">{{#each skuAttr}}{{@key}}:{{this}}&nbsp;&nbsp;{{/each}}</span></span></td>
                <td>{{itemId}}</td>
                <td>{{shopName}}</td>
                <td><div><span class="price">{{_CURRENCY_}}</span><span class="price item-price">{{formatPrice skuPrice}}</span></div></td>
                <td>
                  <div class="input-amount" data-min="1" data-max="{{unbindPayCount}}">
                    <a href="javascript:void(0);" class="minus {{#equals unbindPayCount 0}}disabled{{/equals}}" >-</a>
                    <input type="number" class="count-number" value="{{unbindPayCount}}" data-old="{{unbindPayCount}}" data-init="{{unbindPayCount}}" data-current-count="{{currentCount}}">
                    <a href="javascript:void(0);" class="plus {{#equals unbindPayCount subItemCount}}disabled{{/equals}}">+</a>
                  </div>
                </td>
              </tr>
            {{else}}
              <tr><td colspan="4" class="center-text">无可展示信息</td></tr>
            {{/each}}
          </tbody>
        </table>
        <div class="selected-pagination pagination-danger"></div>
      </div>
      <div class="modal-footer">
        <div class="modal-footer-option">
          <span class="quota-requried-div">
            <input type="checkbox" class="input-checkbox" name="quota-requried" />是否超过此标准继续采购
          </span>
          <button class="btn btn-info btn-medium close">取消</button>
          <button class="btn btn-primary btn-medium js-payment-items-submit js-quota-submit">确定</button>
        </div>
        <div style="float: left; line-height:40px;">
          <label for="select-batch"><input type="checkbox" id="select-batch" class="js-batch-select input-checkbox quota-batchCheck">全选</label>
          &nbsp;&nbsp;&nbsp;&nbsp;
          <label class="js-select-item-info"></label>
        </div>
      </div>
    </div>
  </div>
</div>
