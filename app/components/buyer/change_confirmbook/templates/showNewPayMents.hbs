<div class="modal pur-modal">
  <div class="modal-header">
    <h2 style='display: inline-block;'>选择采购计划</h2>
    <a href="javascript:;" class="close">&times;</a>
  </div>
  <div class="showNewPayMents-items-lists" data-req-lists-total="{{_DATA_.total}}">
    <div class="showNewPayMents-items" >
      <div class="modal-body clearfix">
        {{!-- {{json this}} --}}
        <table class="table  center-tex delivery-item-table">
          <thead>
            <tr>
              <th width="24"></th>
              <th class="left-text" width="176"> <span class="">采购计划文号</span> </th>
              <th width="120">采购目录</th>
              <th width="120">可用金额(元)</th>
              <th width="120" class="last">可用数量</th>
            </tr>
          </thead>
          <tbody>
            {{#each _DATA_.data}}
              <tr class="item-tr">
                <td width="24" class="check">
                {{#of confirmationId ../_DATA_.selectedIds}}
                &radic;
                {{else}}
                <input type="radio" id="{{confirmationId}}" name="payments" class="js-select-item input-radio">
                {{/of}}
                </td>
                <td class="left-text" data-confirmationid="{{confirmationId}}"><label for="{{confirmationId}}">{{confirmationNo}}</label></td>
                <td>{{category}}</td>
                <td>{{formatPrice remainMoney}}</td>
                <td class="last">{{remainQuantity}}</td>
              </tr>
            {{else}}
              <tr><td colspan="6" class="center-text">无可展示信息</td></tr>
            {{/each}}
          </tbody>
        </table>
        <div class="selected-pagination pagination-danger"></div>
      </div>
      <div class="modal-footer">
        <div class="modal-footer-option">
          <button class="btn btn-info btn-medium close">取消</button>
          <button class="btn btn-primary btn-medium js-new-payment-items-submit">确定</button>
        </div>
        <div style="float: left; line-height:40px;">
          {{!-- <label for="select-batch"><input type="checkbox" id="select-batch" class="js-batch-select">全选</label> --}}
          &nbsp;&nbsp;&nbsp;&nbsp;
          {{!-- <label class="js-select-item-info"></label> --}}
        </div>
      </div>
    </div>
  </div>
</div>
