<div class="modal pur-modal">
  <div class="modal-header">
    <h2>未关联地址的商品</h2>
  </div>
  <div class="delivery-items-lists" data-req-lists-total="{{_DATA_.total}}" data-deliveryId="{{_DATA_.deliveryId}}">
    <div class="unbind-delivery-items">
      <div class="modal-body clearfix">
        <div><strong><span class="req-title">商品清单</span></strong></div>
        {{!-- {{json _DATA_}} --}}
        <table class="table  center-tex unbind-delivery-item-table">
          <thead>
            <tr>
              <th width="24"></th>
              <th class="left-text" width="350"> <span class="">商品</span> </th>
              <th width="70">商品编号</th>
              <th width="80">单价(元)</th>
              <th width="90">关联地址数量</th>
              <th width="100" class="last">已关联地址数量</th>
            </tr>
          </thead>
          <tbody>
            {{#each _DATA_.data}}
              <tr class="item-tr" data-skuid="{{skuId}}" data-itemid="{{itemId}}" data-id="{{id}}">
                <td width="24" class="check"><input type="checkbox" class="js-select-item input-checkbox"></td>
                <td class="left-text"><span><span>{{itemName}}</span>&nbsp;&nbsp;&nbsp;&nbsp;<span class="sku-attrs">{{#each skuAttr}}{{@key}}:{{this}}&nbsp;&nbsp;{{/each}}</span></span></td>
                <td>{{itemId}}</td>
                {{!-- <td>{{shopName}}</td> --}}
                <td><div><span class="price">{{_CURRENCY_}}</span><span class="price item-price">{{formatPrice skuPrice}}</span></div></td>
                <td><span class="js-unbind-item-subCount" data-init="{{quantity}}">{{quantity}}</span></td>
                <td class="last">
                  <div class="input-amount" data-min="0" data-max="{{unbindQuantity}}">
                    <a href="javascript:void(0);" class="minus {{#equals unbindQuantity 0}}disabled{{/equals}}" >-</a>
                    <input type="number" class="count-number" value="{{unbindQuantity}}" data-old="{{unbindQuantity}}" data-init="{{unbindQuantity}}" data-old-count="{{quantity}}">
                    <a href="javascript:void(0);" class="plus {{#equals unbindQuantity subItemCount}}disabled{{/equals}}">+</a>
                  </div>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
        <div class="selected-pagination pagination-danger"></div>
      </div>
      <div class="modal-footer">
        <div class="modal-footer-option">
          <button class="btn btn-info btn-medium close">取消</button>
          <button class="btn btn-primary btn-medium js-delivery-items-submit">确定</button>
        </div>
        <div style="float: left; line-height:40px;">
          <label for="select-batch"><input type="checkbox" id="select-batch" class="js-batch-select input-checkbox">全选</label>
          &nbsp;&nbsp;&nbsp;&nbsp;
          <label class="js-select-item-info"></label>
        </div>
      </div>
    </div>
  </div>
</div>
