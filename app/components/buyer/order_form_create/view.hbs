{{#component "order-form-create trade-manage js-comp clearfix"}}
  <div class="t-breadcrumb">
    {{#equals fromCart 1}}
      <a href="javascript:void(0)" class="js-back-to-cart">返回购物车</a>
      <label> > </label>
      <label class="active">生成订单</label>
    {{/equals}}
  </div>
  <p style="display:none">{{json this}}</p>
  <div class="trade-block">
    <div class="block-title">采购计划</div>
    <div class="block-content">
      <div class="clearfix operator-btn">
        <a href="javascript:;" class="js-bind-purchase-plan">关联采购计划</a>
      </div>
      <div class="items-plans-list" data-domain="{{_DATA_.settlement}}">
      </div>
    </div>
  </div>
  <div class="trade-block">
    <div class="block-title">收货地址</div>
    <div class="block-content">
      {{inject "buyer/delivery_address_picker" userId=_USER_.id middleHref=_DATA_.middle editAble=true}}
    </div>
  </div>
  <div class="trade-block">
    <div class="block-title">发票</div>
    <div class="block-content">
      {{#equals orderType 2}}
        <!--疫苗默认集中开票-->
        {{inject "buyer/invoice_picker" orgId=_USER_.orgId userId=_USER_.id mode=1}}
      {{else}}
        {{#equals orderType 3}}
          <!--大宗订单只能集中开票-->
          <div class="invoice-mode-select">
            <input type="radio" class="input-radio" name="invoice-mode" id="invoice-mode-unify" value="1" checked
                   disabled><label for="invoice-mode-unify">&nbsp;集中开票</label>
          </div>
        {{else}}
          {{inject "buyer/invoice_picker" orgId=_USER_.orgId userId=_USER_.id}}
        {{/equals}}
      {{/equals}}
    </div>
  </div>
  <div class="trade-block">
    <div class="block-title">需求商品</div>
    <div class="block-content">
      <div class="requisition-items-list">

      </div>
    </div>
  </div>
  {{#equals fromCart 1}}
    <a href="javascript:void(0)" class="back-cart js-back-to-cart">< 返回购物车修改</a>
  {{/equals}}

  {{#of orderType '2,3'}}
      {{else}}
      <div class="contract">
          <label><input type="checkbox" class="js-contract-checkbox input-checkbox"/>网超合同</label>
      </div>
  {{/of}}

  <div id="info-placeholder"></div>
  <div class="order-addition-info">
    <span>已关联采购计划总额(元)：<span class="price js-bind-money">0.00</span></span>
    <span>计划外资金总额(元)：<span class="price js-unbind-money">0.00</span></span>
    <span>总计金额(元)：<span class="price currency js-total-money">0.00</span></span>
    <button class="btn btn-primary js-submit-order">确定下单</button>
  </div>
{{/component}}