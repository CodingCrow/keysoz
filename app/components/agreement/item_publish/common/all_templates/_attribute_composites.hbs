<ul class="attribute-list clearfix attribute-data attribute-composites" data-attr="{{json ../composites}}">
  {{#each ../composites}}
    {{#if attributeRule}}
      {{#with attributeRule}}
        {{> component:agreement/item_publish/common/other_templates/_composites_item attrVal=../attrVal}}
      {{/with}}
    {{else}}
      {{#with categoryAttribute}}
        {{> component:agreement/item_publish/common/other_templates/_composites_item}}
      {{/with}}
    {{/if}}
  {{/each}}
</ul>