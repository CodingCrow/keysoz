{{#if @root.spuId}}
  {{#if attrVal}}
    {{> component:agreement/item_publish/common/all_templates/_attribute_input}}
  {{else}}
    {{#if ../composites}}
      {{> component:agreement/item_publish/common/all_templates/_attribute_composites}}
    {{else}}
      {{#equals property.valueType "2"}}
        {{> component:agreement/item_publish/common/all_templates/_attribute_multi}}
      {{else}}
        {{> component:agreement/item_publish/common/all_templates/_attribute_dropdown}}
      {{/equals}}
    {{/if}}
  {{/if}}
{{else}}
  {{#equals group "SPU"}}
    {{> component:agreement/item_publish/common/all_templates/_attribute_input}}
  {{else}}
    {{#if readOnlyBySeller}}
      {{> component:agreement/item_publish/common/all_templates/_attribute_input}}
    {{else}}
      {{#if ../composites}}
        {{> component:agreement/item_publish/common/all_templates/_attribute_composites}}
      {{else}}
        {{#equals property.valueType "2"}}
          {{> component:agreement/item_publish/common/all_templates/_attribute_multi}}
        {{else}}
          {{> component:agreement/item_publish/common/all_templates/_attribute_dropdown}}
        {{/equals}}
      {{/if}}
    {{/if}}
  {{/equals}}
{{/if}}
