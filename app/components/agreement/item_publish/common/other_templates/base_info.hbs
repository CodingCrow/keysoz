    <div class="control-group">
      <label class="group-title line-title"><b class="required">*</b>商品标题：</label>
      <div class="group-content">
        <input type="text" id="input-name" class="input-text is-filled" name="name" maxLength="200" style="width: 380px;" placeholder="请输入商品名称" value="{{item.name}}" required/>
        {{#equals isEdit false}}<a href="javascript:;" id="js-showProductList-btn" class="btn btn-secondary" style="vertical-align: middle;">选择商品</a>{{/equals}}
      </div>
    </div>
    <div class="control-group">
      <label class="group-title line-title"><b class="required"></b>关联协议：</label>
      <div class="group-content">
        <select class="noselectric" id="js-item-project" style="width: 380px;" name="select-project" {{#if
              item}} data-id="{{agrGood.projectId}}" data-name="{{agrGood.projectName}}" {{/if}}>
              </select>
      </div>
    </div>
    <div class="control-group">
      <label class="group-title line-title"><b class="required"></b>供货范围：</label>
      <div class="group-content">
        <span id="regionId" class="txt" data-id="{{agrGood.deliverId}}">{{#if agrGood.deliverName}}{{agrGood.deliverName}}{{else}}-{{/if}}</span>
      </div>
    </div>
    <div class="control-group">
      <label class="group-title"><b class="required">*</b>商品图片：</label>
      <div class="image-area group-content">
        <p class="">请上传小于1MB的PNG或JPG的图片</p>
        <div class="main-image {{#unless
                        item.mainImage}}empty{{/unless}} image-container js-main-image js-item-image" id="js-item-main-image">
          {{#if item.mainImage}}
            <img src="{{item.mainImage}}" alt="">
          {{else}}
            <span class="image-tip-add">+</span>
          {{/if}}
          <input type="hidden" name="mainImage" value="{{item.mainImage}}">
        </div>
        <ul class="images-list js-images-list clearfix">
          {{#if itemDetail.images}}
            {{#each itemDetail.images}}
              <li class="pull-left image-container js-item-image-container item-image js-item-image">
                <img src="{{url}}" alt="" data-src="{{url}}" data-name="{{name}}" />
                <span class="image-operate">
                  <i class="icon-mewtwo icon-mewtwo-left-arrow js-move-image" data-direct="left"></i>
                  <i class="icon-mewtwo icon-mewtwo-trash js-delete-image"></i>
                  <i class="icon-mewtwo icon-mewtwo-right-arrow js-move-image" data-direct="right"></i>
                </span>
              </li>
              {{#if @last}}
                {{#gt @index 3}}
              {{else}}
                <li class="pull-left image-container image-end empty js-item-image">
                  <span class="image-tip-add">+</span>
                </li>
                {{/gt}}
              {{/if}}
            {{/each}}
          {{else}}
            <li class="pull-left image-container image-end empty js-item-image">
              <span class="image-tip-add">+</span>
            </li>
          {{/if}}
        </ul>
      </div>
    </div>
    <div class="form-left">
      <div class="control-group">
        <label class="group-title line-title"><b class="required">*</b>市场价（元）：</label>
        <div class="group-content">
          <input type="text" id="js-marketPrice" class="input-text" maxLength="32" placeholder="请输入价格" data-key="origin" {{#if agrGood}} value="{{agrGood.marketPrice}}" {{/if}} pattern="^[+-]?\d+(\.\d+)?$" required />
        </div>
      </div>
      {{#equals tag 'medical'}}
      <div class="control-group">
        <label class="group-title line-title">团购价（元）：</label>
        <div class="group-content">
          <input type="text" id="js-groupPrice" class="input-text" maxLength="32" placeholder="请输入价格" data-key="origin" {{#if agrGood}} value="{{agrGood.groupPrice}}" {{/if}} pattern="^[+-]?\d+(\.\d+)?$"  />
        </div>
      </div>
      {{/equals}}
      <div class="control-group">
        <label class="group-title line-title"><b class="required"></b>优惠率：</label>
        <div class="group-content">
          <span class="txt" id="rate">{{#if agrGood}}{{agrGood.discountRate}}%{{else}}-{{/if}}</span>
        </div>
      </div>
