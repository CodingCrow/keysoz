      <div class="control-group">
        <label class="group-title line-title">
          电商平台：
                </label>
        <div class="group-content">
          <input type="text" id="input-selfPlatformLink" class="input-text js-need-validated wd-300" name="selfPlatformLink" placeholder="请输入电商平台链接" value="{{item.extra.selfPlatformLink}}" pattern="^((https|http):\/\/)[^\s]+" {{#if item.isNetSuper}} required {{else}} {{#equals ptype "2"}}
            required {{/equals}} {{#equals ptype "6"}} required {{/equals}} {{/if}} />
        </div>
      </div>
      <div class="control-group">
        <label class="group-title line-title"></label>
        <div class="group-content">
          <span class="note">以http://或https://开头</span>
          <span class="note-error">以http://或https://开头</span>
        </div>
      </div>
    </div>
    <div class="form-right">
      <div class="control-group">
        <label class="group-title line-title"><b class="required">*</b>协议价（元）：</label>
        <div class="group-content">
          <input type="text" id="js-agreementPrice" class="input-text" name="agreementPrice" maxLength="32" placeholder="请输入价格" data-key="origin" {{#if agrGood}} value="{{agrGood.agreementPrice}}" {{/if}} pattern="^[+-]?\d+(\.\d+)?$" required />
        </div>
      </div>
      {{#equals tag 'medical'}}
      <div class="control-group">
        <label class="group-title line-title">团购数量：</label>
        <div class="group-content">
          <input type="text" id="js-groupQuantity" class="input-text" maxLength="32" placeholder="请输入团购数量" data-key="origin" {{#if agrGood}} value="{{agrGood.groupQuantity}}" {{/if}} pattern="^[+-]?\d+(\.\d+)?$"  />
        </div>
      </div>
      {{/equals}}
      <div class="control-group">
        <label class="group-title line-title"><b class="required">*</b>货源情况：</label>
        <div class="group-content line-h-32">
          <input type="radio" name="supply" value="1" {{#if agrGood.isStockShort}} {{#equals agrGood.isStockShort 1}} checked {{/equals}} {{else}} checked {{/if}}><span class="ml-xs text-muted">现货</span>
          <input type="radio" name="supply" value="0" {{#if agrGood.isStockShort}} {{#equals agrGood.isStockShort 0}} checked {{/equals}} {{/if}}><span class="ml-xs text-muted">缺货</span>
        </div>
      </div>
      <div class="control-group">
        <label class="group-title line-title" style="margin-left: -10px; width: 105px"><b class="required">*</b>商品代码(货号)：</label>
        <div class="group-content">
          <input type="text" id="input-itemCode" class="input-text" name="itemCode" maxLength="200" placeholder="请输入商品代码" value="{{item.itemCode}}" required/>
        </div>
      </div>
