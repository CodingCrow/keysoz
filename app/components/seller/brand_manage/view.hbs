{{#component "brand-manage js-comp"}}
<div class="pull-right">
  <a class="btn btn-minor" href="/seller/brand-creat">点击申请</a>
</div>
  <div class="component-header">
    <div name="status" class="tab" data-type="switchable">
        <ul class="tab-navs clearfix">
          <li value=""><a href="javascript:;">全部<span class="tab-label"></span></a></li>
          <li value="1"><a href="javascript:;">待审核<span class="tab-label"></span></a></li>
          <li value="3"><a href="javascript:;">审核成功<span class="tab-label"></span></a></li>
          <li value="-1"><a href="javascript:;">审核失败<span class="tab-label"></span></a></li>
        </ul>
    </div>
  </div>
  <div class="component-body">
      <div class="search-item">
          <div id="block" class="block filter-block">
              <fieldset>
            <span class="span3">
              <label for="">&nbsp;&nbsp;品牌名称&nbsp;&nbsp;
                <input type="text" class="item-filter-item search" name="brandName" value="" placeholder="请输入品牌名称">
              </label>
            </span>
                  <span class="span3">
              <label for="">&nbsp;&nbsp;申请类型&nbsp;&nbsp;
                <select name="type" class="search">
                  <option value="">请选择</option>
                  <option value="0">创建</option>
                  <option value="1">变更</option>
              </select>
              </label>
            </span>
                  <span class="span3">
             <label for="">&nbsp;&nbsp;状态&nbsp;&nbsp;
                <select name="status" class="search">
                  <option value="">请选择</option>
                  <option value="0">待提交</option>
                  <option value="1">待审核</option>
                  <option value="3">审核通过</option>
                  <option value="-1">审核不通过</option>
              </select>
              </label>
            </span>
                  <span class="span2 pull-right">
              <label for="filter">
                <button  id="searchBtn" class="btn btn-minor js-item-filter">搜索</button>
                &nbsp;
                <button  id="resetBtn" class="btn btn-ghost js-filter-clear">重置</button>
              </label>
            </span>
              </fieldset>
          </div>
      </div>
    <div class="item-list">
      <table class="table  item-manage-table">
        <thead>
          <tr>
            <th class="left-text">申请ID</th>
            <th>品牌名称</th>
            <th>所有人</th>
            <th>注册号</th>
            <th>申请类型</th>
            <th>申请时间</th>
            <th>审核时间</th>
            <th>状态</th>
            <th width="110" class="td-operation">操作</th>
          </tr>
        </thead>
        <tbody>
          {{#each _DATA_.data}}
          <tr data-id="{{brandId}}" data-workid="{{id}}">
            <td><a href="/seller/brand-detail?brandId={{brandId}}&workflowId={{id}}" target="_blank">{{id}}</a></td>
            <td>{{brandName}}</td>
            <td>{{brandOwner}}</td>
            <td>{{registrationNo}}</td>
            <td>
              {{#equals type "0"}}创建{{/equals}}
              {{#equals type "1"}}变更{{/equals}}
            </td>
            <td>{{creationTime}}</td>
            <td>{{auditedAt}}</td>
            {{#equals status "0"}}<td>待提交</td>{{/equals}}
            {{#equals status "1"}}<td>待审核</td>{{/equals}}
            {{#equals status "3"}}<td class="text-success">审核通过</td>{{/equals}}
            {{#equals status "-1"}}<td class="text-error">审核失败</td>{{/equals}}
            <td class="td-operation">
              {{#equals status "0"}}
                <a href="/seller/brand-creat?brandId={{brandId}}&workflowId={{id}}">编辑</a>
                <a data-type="{{type}}" href="javascript:;" class="js-submit">提交</a>
              {{/equals}}
              {{#equals status "-1"}}
                <a href="/seller/brand-creat?brandId={{brandId}}&workflowId={{id}}">编辑</a>
                <a href="javascript:;" class="js-delete">删除</a>
              {{/equals}}
              {{#of status "1,3"}}-{{/of}}
            </td>
          </tr>
          {{/each}}
        </tbody>
        <tfoot>
          <tr>
            <td colspan="9" class="td-operation"><div class="item-pagination" data-total="{{_DATA_.total}}" data-size="{{#if pageSize ~}}{{pageSize}}{{else}}20{{~/if}}"></div></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
{{/component}}
