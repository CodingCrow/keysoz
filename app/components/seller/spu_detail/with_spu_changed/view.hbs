{{#component "spu-publish-with-spu"}}
  <input type="hidden" name="id" value="{{spuId}}">
  <input type="hidden" name="categoryId" value="{{_DATA_.changeValue.spu.categoryId}}">
  {{#with _DATA_.changeValue}}
    {{> component:seller/spu_detail/common/other_templates/base_info}}
  {{/with}}

  {{#each _DATA_.changeValue.otherAttrs}}
    {{#of group "普通属性,USER_DEFINED"}}
      {{> component:seller/spu_detail/common/other_templates/default_attrs attrGroup="普通属性,SPU"}}
    {{/of}}
  {{/each}}

  {{#isEmpty _DATA_.changeValue.skuAttrs}}
  {{else}}
    {{#with _DATA_.changeValue}}
      {{> component:seller/spu_detail/common/other_templates/sku_attrs}}
    {{/with}}
  {{/isEmpty}}

  {{#with _DATA_.changeValue}}
    {{> component:seller/spu_detail/common/other_templates/price_stock skus=skuTemplates}}
  {{/with}}

  {{#each _DATA_.changeValue.otherAttrs}}
    {{#of group "服务信息,政策信息"}}
      {{> component:seller/spu_detail/common/other_templates/other_attrs attrGroup="服务信息,政策信息"}}
    {{else}}
      {{#of group "普通属性,SPU,USER_DEFINED"}}
      {{else}}
        {{> component:seller/spu_detail/common/other_templates/attrs_temp}}
      {{/of}}
    {{/of}}
  {{/each}}

{{/component}}
