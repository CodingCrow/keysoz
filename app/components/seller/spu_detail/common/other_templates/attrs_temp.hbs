<div class="form-section clearfix">
  <div class="section-title">
    {{group}}
  </div>
  <div class="pull-left section-content">
    <div class="category-attribute attribute-area js-attribute-area">
      <ul class="attribute-list clearfix attribute-data" id="js-category-attribute-list" {{#if otherAttributeWithRules}}
        data-attr="{{json otherAttributeWithRules}}"
      {{else}}
        data-attr="{{json categoryAttributes}}"
      {{/if}}>
      {{#if otherAttributeWithRules}}
        {{#each otherAttributeWithRules}}
          {{> component:seller/spu_detail/common/other_templates/_attribute_container}}
        {{/each}}
      {{else}}
        {{#each categoryAttributes}}
          {{> component:seller/spu_detail/common/other_templates/_attribute_container}}
        {{/each}}
      {{/if}}
      </ul>
    </div>
  </div>
</div>
