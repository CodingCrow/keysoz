<li class="pull-left js-category-attr attr-show-li {{#if composites}}attr-show-composites-li{{/if}}
    {{#equals property.valueType "2"}}attr-show-multi-li{{/equals}}"
    data-attr="{{json this}}">
  <div class="control-group">
    <label class="group-title hint--top" title="{{attrKey}}" aria-label="{{attrKey}}">
      <span class="group-line-title">
      {{#equals attrMetasForK.REQUIRED "true"}}
        <b class="required">*</b>
      {{/equals}}
        {{attrKey}}：
      </span>
    </label>
    <div class="group-content">
      {{#equals property.code "brand"}}
        <select class="noselectric"
                id="js-item-brand"
                name="select-brand"
          {{#if attrMetas.SPU_VALUE}}
                data-brand="{{attrMetas.SPU_VALUE}}"
          {{else}}
                data-brand="{{attrVal}}"
          {{/if}}
                style="width: 160px;"
          {{#equals attrMetas.SPU_DEFINED "true"}}
                disabled
          {{/equals}}
                required>
        </select>
        <input type="hidden"
               class="js-item-brand-input js-group-item"
               data-key="{{attrKey}}"
               data-group="{{group}}"
               data-property-id="{{propertyId}}"
          {{#if attrMetas.SPU_VALUE}}
               value="{{attrMetas.SPU_VALUE}}"
          {{else}}
               value="{{attrVal}}"
          {{/if}}
        >
      {{/equals}}
      {{#equals property.code "birthday"}}
        <div class="input-group-datepicker">
          <input type="text"
                 class="js-group-item input-text datepicker js-input-datepicker"
                 name="birthday"
                 placeholder="请选择日期"
                 data-key="{{attrKey}}"
                 data-group="{{group}}"
                 data-property-id="{{propertyId}}"
            {{#if attrMetas.SPU_VALUE}}
                 value="{{attrMetas.SPU_VALUE}}"
            {{else}}
                 value="{{attrVal}}"
            {{/if}}
            {{#equals attrMetas.SPU_DEFINED "true"}}
                 disabled
            {{/equals}}
                 readonly>
        </div>
      {{/equals}}
      {{#of property.code "brand,birthday"}}{{else}}
        {{> seller/item_issue/all_templates/_real_attribute_item}}
      {{/of}}
      {{#equals attrBusinessMetas.MODIFIABLE "false"}}
        <span class="sku-attr-status" title="该属性发布后不允许编辑">
          <i class="icon-mewtwo icon-mewtwo-info-fill"></i>
        </span>
      {{/equals}}
    </div>
  </div>
</li>
