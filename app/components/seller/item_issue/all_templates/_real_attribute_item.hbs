{{#if @root.spuId}}
  {{#if attrVal}}
    {{#if composites}}
      {{> seller/item_issue/all_templates/_attribute_composites}}
    {{else}}
      {{#equals property.valueType "2"}}
        {{> seller/item_issue/all_templates/_attribute_multi}}
      {{else}}
        {{> seller/item_issue/all_templates/_attribute_dropdown}}
      {{/equals}}
    {{/if}}
  {{else}}
    {{#if composites}}
      {{> seller/item_issue/all_templates/_attribute_composites}}
    {{else}}
      {{#equals property.valueType "2"}}
        {{> seller/item_issue/all_templates/_attribute_multi}}
      {{else}}
        {{> seller/item_issue/all_templates/_attribute_dropdown}}
      {{/equals}}
    {{/if}}
  {{/if}}
{{else}}
  {{#equals group "SPU"}}
    {{> seller/item_issue/all_templates/_attribute_input}}
  {{else}}
    {{#if readOnlyBySeller}}
      {{> seller/item_issue/all_templates/_attribute_input}}
    {{else}}
      {{#if composites}}
        {{> seller/item_issue/all_templates/_attribute_composites}}
      {{else}}
        {{#equals property.valueType "2"}}
          {{> seller/item_issue/all_templates/_attribute_multi}}
        {{else}}
          {{> seller/item_issue/all_templates/_attribute_dropdown}}
        {{/equals}}
      {{/if}}
    {{/if}}
  {{/equals}}
{{/if}}
