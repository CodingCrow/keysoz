{{#component "item-publish-with-spu"}}

  {{#with _DATA_}}
    {{> component:seller/item_publish/common/other_templates/base_info item=spu itemDetail=spuDetail}}
  {{/with}}

  {{#each _DATA_.otherAttrs}}
    {{#equals group "普通属性"}}
      {{> component:seller/item_publish/common/other_templates/default_attrs attrGroup="普通属性,SPU"}}
    {{/equals}}
  {{/each}}

  {{#isEmpty _DATA_.skuAttrs}}
  {{else}}
    {{#with _DATA_}}
      {{> component:seller/item_publish/common/other_templates/sku_attrs spuId=@root.spuId}}
    {{/with}}
  {{/isEmpty}}

  {{#with _DATA_}}
    {{> component:seller/item_publish/common/other_templates/price_stock skus=skuTemplates}}
  {{/with}}

  {{#each _DATA_.otherAttrs}}
    {{#of group "服务信息,政策信息"}}
      {{> component:seller/item_publish/common/other_templates/other_attrs attrGroup="服务信息,政策信息"}}
    {{/of}}
  {{/each}}

  {{#each _DATA_.otherAttrs}}
    {{#of group "普通属性,SPU,服务信息,政策信息"}}
    {{else}}
      {{> component:seller/item_publish/common/other_templates/attrs_temp}}
    {{/of}}
  {{/each}}

  {{> component:seller/item_publish/common/other_templates/user_defined_attrs}}

  {{> component:seller/item_publish/common/other_templates/rich_editor}}

{{/component}}
