<li class="js-category-attr attr-show-li" data-attr="{{json ..}}">
  <div class="control-group">
    <label class="group-title hint--top" title="{{attrKey}}" aria-label="{{attrKey}}">
          <span class="group-line-title">
          {{#equals attrMetasForK.REQUIRED "true"}}
            <b class="required">*</b>
          {{/equals}}
            {{attrKey}}：
          </span>
    </label>
    <div class="group-content">
        {{#if @root.spuId}}
          {{#if ../attrVal}}
            {{> component:seller/item_publish/common/all_templates/_attribute_input}}
          {{else}}
            {{#equals property.valueType "2"}}
              {{> component:seller/item_publish/common/all_templates/_attribute_multi}}
            {{else}}
              {{> component:seller/item_publish/common/all_templates/_attribute_dropdown}}
            {{/equals}}
          {{/if}}
        {{else}}
          {{#equals group "SPU"}}
            {{> component:seller/item_publish/common/all_templates/_attribute_input}}
          {{else}}
            {{#if readOnlyBySeller}}
              {{> component:seller/item_publish/common/all_templates/_attribute_input}}
            {{else}}
              {{#equals property.valueType "2"}}
                {{> component:seller/item_publish/common/all_templates/_attribute_multi}}
              {{else}}
                {{> component:seller/item_publish/common/all_templates/_attribute_dropdown}}
              {{/equals}}
            {{/if}}
          {{/equals}}
        {{/if}}
      {{#equals attrMetasForK.PROPERTY_TYPE "SKU_CANDIDATE"}}
        <span class="sku-attr-status">
              &nbsp;
              <i class="icon-mewtwo icon-mewtwo-info-fill"></i>
              <i class="icon-mewtwo icon-mewtwo-success-fill active hide"></i>
              <span class="sku-attr-show">&nbsp;销售属性</span>
            </span>
      {{/equals}}
    </div>
  </div>
</li>